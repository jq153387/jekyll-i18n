{% if include.obj.content_id %}
  {% assign temp_content_id = include.obj.content_id %}
{% else %}
  {% if include.obj.collection %}
    {% assign collection_path = include.obj.collection | prepend: "_" | append: "/" %}
    {% assign path_in_collection = include.obj.path | remove_first: collection_path %}
  {% else %}
    {% assign path_in_collection = include.obj.path %}
  {% endif %}
  {% assign temp_content_id = path_in_collection | split: "." | pop | join: "." %}
{% endif %}
